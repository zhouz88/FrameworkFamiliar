<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zhengzhou.individual.interview">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cat"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.InterviewMain">
        <activity
            android:name=".musicdetails.MusicDetailsActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".loadingTasks.LoadingActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".details.DetailsActivity"
            android:launchMode="singleTop" />
        <service android:name=".musicdetails.MusicService"/>
    </application>
</manifest>