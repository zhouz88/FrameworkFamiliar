<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.InterviewMain">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <include
                layout="@layout/app_bar_main_news"></include>

            />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/music_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:gravity="center"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="40dp"
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/shot_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true" />

    <SeekBar
        android:layout_marginTop="40dp"
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:progressBackgroundTint="@color/teal_200"
        android:progressTint="@color/teal_700"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:background="@color/topBarColor"
            android:foreground="@drawable/ripple_main_color"
            android:id="@+id/btn_main_play"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:clickable="false"
            android:layout_marginEnd="10dp"
            android:text="play"
            android:textSize="13sp" />

        <Button
            android:background="@color/topBarColor"
            android:foreground="@drawable/ripple_main_color"
            android:id="@+id/btn_main_stop"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:clickable="false"
            android:layout_marginEnd="10dp"
            android:text="stop"
            android:textSize="13sp" />

        <Button
            android:background="@color/topBarColor"
            android:foreground="@drawable/ripple_main_color"
            android:id="@+id/btn_main_pause"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:clickable="false"
            android:layout_marginEnd="10dp"
            android:text="pause"
            android:textSize="13sp" />

        <Button
            android:background="@color/topBarColor"
            android:foreground="@drawable/ripple_main_color"
            android:id="@+id/btn_main_exit"
            android:layout_width="90dp"
            android:clickable="false"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:text="exit"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>